{
  "name": "ardents",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev-site\" \"npm run cms\"",
    "build": "prisma generate && prisma migrate deploy --schema=./prisma/schema.prisma && next build",
    "start": "concurrently \"npm run start-site\" \"npm run cms\"",
    "lint": "next lint",
    "prisma:generate": "prisma generate",
    "postinstall": "prisma generate",
    "cms": "npm --prefix directus start",
    "dev-site": "prisma migrate deploy --schema=./prisma/schema.prisma && next dev --turbopack",
    "start-site": "prisma migrate deploy --schema=./prisma/schema.prisma && next start"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.9.0",
    "ethers": "^6.14.3",
    "mime": "^3.0.0",
    "next": "15.3.3",
    "next-auth": "^4.24.11",
    "prisma": "^6.9.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "siwe": "^3.0.0",
    "swr": "^2.2.0",
    "viem": "^2.30.6",
    "wagmi": "^2.15.4",
    "@directus/sdk": "^9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/mime": "^3.0.4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "concurrently": "^9.1.2"
  }
}
